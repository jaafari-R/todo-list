<%- include ("../views/partials/header") %>
    <div class="row">
        <div class="col-md-3">
            <form method="post" action="todo/add">
                <div class="form-group">
                    <label>Task</label><br>
                    <input class="input-block-level form-control" type="text" name="task" placeholder="Task">
                </div>
                <div class="form-group">
                    <label>Task Description</label><br>
                    <textarea class="input-block-level form-control" name="desc" id="" cols="20" rows="5"></textarea>
                </div>
                <br>
                <button class="btn btn-primary input-block-level form-control" type="submit">Add Task</button>
            </form>
            <br>
        </div>
        <div class="col-md-9">
            <h3 class="text-center">Tasks</h3>
            <ul class="list-group">
                <% todos.forEach(function(todo) { %>
                    <li class="list-group-item">
                        <h4><%= todo.task %></h4>
                        <p> <%= todo.desc %> </p>
                        <div class="text-end">
                            <a class="btn btn-secondary" href="/todo/edit/<%= todo._id %>" class="edit-task">Edit Task</a>
                            <a class="delete-task btn btn-danger" href="#" data-id="<%= todo._id %>">Delete Task</a>
                        </div>
                    </li>            
                <% }); %>
            </ul>
        </div>
    </div>
<%- include ("../views/partials/footer") %>
